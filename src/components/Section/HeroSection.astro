---
  interface Props {
  model: string;
  price?:string;
  description?:string;
  price_before?:string;
	video: string;
  buttons?: number;
}

const { model, price, description, price_before,video, buttons } = Astro.props;



---





<section class="flex flex-col justify-start h-screen w-screen relative text-center overflow-hidden bg-black z-30" data-header-color="white">
  <header class="relative z-30 flex-grow">
    <h2 class="text-white pt-28 text-[40px] font-medium ">{model}</h2>
    {
      price === undefined ? "" : <h3 class="text-white text-xl font-medium">From ${price}*</h3> 
    }
    {
      description === undefined ? "" : <p class="text-xs text-white">{description}</p> 
    }
  </header>
  <footer class="relative z-30 py-8">
    <div class=" flex gap-6 justify-center py-10">
      {
        buttons !== undefined 
        ? <a class:list={[
          "px-24 py-[10px] bg-black bg-opacity-50 text-gray-100 rounded-[4px] font-medium text-sm",
          {
            "border-2 border-white border-solid bg-transparent font-semibold": buttons <=1,
          },
        ]} href="#">Demo Drive</a> 
        :<a class="px-24 py-[10px] bg-gray-300 text-gray-800 rounded-[4px] font-medium text-sm" href="#">Order Now</a>
        <a class="px-24 py-[10px] bg-black bg-opacity-50 text-gray-100 rounded-[4px] font-medium text-sm" href="#">Demo Drive</a>
      }
    </div>
    {
      price === undefined 
      ? "" 
      :
      <p class="text-white text-xs max-w-[585px] mx-auto">*Price before incentives and savings is ${price_before}, excluding taxes and fees. Subject to change.
        <a class="underline" href="#">Learn about est. gas savings.</a>
      </p>
    }
  </footer>
    <div class="absolute w-full h-full z-10">
      <video class="w-full h-full object-cover" autoplay muted loop src=`${video}`></video>
    </div>
</section>